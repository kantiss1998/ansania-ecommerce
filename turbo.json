{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env",
        "tsconfig.json"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": [
                "build"
            ],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "outputs": []
        },
        "lint:fix": {
            "cache": false,
            "outputs": []
        },
        "typecheck": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "test:coverage": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}