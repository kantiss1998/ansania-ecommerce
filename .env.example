# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=ansania_ecommerce
DATABASE_USER=root
DATABASE_PASSWORD=

# =================================
# API CONFIGURATION
# =================================
API_PORT=5000
API_URL=http://localhost:5000
NODE_ENV=development

# JWT Secret (generate using: openssl rand -base64 32)
JWT_SECRET=change-this-to-secure-random-string
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# FRONTEND CONFIGURATION
# =================================
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =================================
# ODOO INTEGRATION
# =================================
ODOO_URL=https://yourcompany.odoo.com
ODOO_DATABASE=yourdb
ODOO_USERNAME=api@yourcompany.com
ODOO_API_KEY=

# Sync intervals (in minutes)
ODOO_PRODUCT_SYNC_INTERVAL=30
ODOO_STOCK_SYNC_INTERVAL=30
ODOO_CATEGORY_SYNC_INTERVAL=60

# =================================
# DOKU PAYMENT GATEWAY
# =================================
DOKU_CLIENT_ID=
DOKU_SECRET_KEY=
DOKU_MERCHANT_ID=
DOKU_ENVIRONMENT=sandbox
DOKU_API_URL=https://api-sandbox.doku.com
DOKU_WEBHOOK_URL=http://localhost:5000/api/checkout/payment-webhook

# =================================
# JNT EXPRESS SHIPPING
# =================================
JNT_API_KEY=
JNT_CUSTOMER_CODE=
JNT_API_URL=https://api-test.jet.co.id
JNT_BRANCH_CODE=CGK10000

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Ansania E-Commerce
SMTP_FROM_EMAIL=noreply@ansania.com

# =================================
# FILE UPLOAD (Optional)
# =================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
STORAGE_TYPE=local

# =================================
# REDIS (Optional - for caching)
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# LOGGING
# =================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
