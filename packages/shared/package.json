{
  "name": "@repo/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types, Zod schemas, and utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && ls -R dist || echo 'DIST IS EMPTY'",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --build --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/config-eslint": "*",
    "@repo/config-typescript": "*",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}